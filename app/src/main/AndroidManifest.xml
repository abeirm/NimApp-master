<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.team10.huyqp_000.nim">


    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.team10.huyqp_000.nim.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.team10.huyqp_000.nim.HomeScreen"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_home_screen"></activity>
        <activity
            android:name="com.team10.huyqp_000.nim.SettingScreen"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_setting_screen"></activity>
        <activity
            android:name="com.team10.huyqp_000.nim.GameScreen"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_game_screen"></activity>
    </application>

</manifest>
